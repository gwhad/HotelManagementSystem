<StackPane fx:id="root" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafx.MainController">
   <children>
       <MediaView fx:id="mediaView" fitHeight="470.0" fitWidth="700.0" preserveRatio="false" />
      <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="430.0" prefWidth="700.0">
         <children>

             <HBox alignment="CENTER" layoutX="102.0" layoutY="32.0" prefHeight="27.0" prefWidth="495.0" spacing="200.0" styleClass="navbar" stylesheets="@style.css">
               <children>
                  <HBox prefHeight="30.0" prefWidth="29.0">
                     <children>
                        <ImageView fx:id="imageView" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@logo.png" />
                           </image>
                        </ImageView>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="30.0" prefWidth="200.0" spacing="10.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#goToHome" styleClass="nav-btn" stylesheets="@style.css" text="Home" textFill="WHITE">
                           <font>
                              <Font size="8.0" />
                           </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#goToRoom" styleClass="nav-btn" stylesheets="@style.css" text="Room" textFill="WHITE">
                           <font>
                              <Font size="8.0" />
                           </font>
                        </Button>
                        <Button mnemonicParsing="false" styleClass="nav-btn" stylesheets="@style.css" text="About" textFill="WHITE" onAction="#goToAbout">
                           <font>
                              <Font size="8.0" />
                           </font>
                        </Button>
                        <Button mnemonicParsing="false" styleClass="nav-btn" stylesheets="@style.css" text="Book" textFill="WHITE" onAction="#goToBook">
                           <font>
                              <Font size="8.0" />
                           </font>
                        </Button>
