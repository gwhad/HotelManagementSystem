                        <Font />
                     </font>
                     <effect>
                        <Bloom />
                     </effect>
                  </Label>
                  <Button mnemonicParsing="false" onAction="#goToHome" styleClass="custom-btn" stylesheets="@style.css" text="See More" textFill="WHITE">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </children>
