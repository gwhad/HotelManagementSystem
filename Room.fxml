                  <Button mnemonicParsing="false" styleClass="custom-btn" stylesheets="@style.css" text="See More" onAction="#goTosuite" />
               </children>
            </StackPane>
         </children>
      </HBox>
      <Label layoutX="287.0" layoutY="88.0" text="Our Rooms" textFill="WHITE">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Label layoutX="161.0" layoutY="123.0" text="Choose from our carefully designed rooms for comfort and elegance." textFill="WHITE" />
   </children>
