         <children>
            <HBox prefHeight="30.0" prefWidth="29.0">
               <children>
                  <ImageView fx:id="imageView" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@logo.png" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="30.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#goToHome" styleClass="nav-btn" stylesheets="@style.css" text="Home" textFill="WHITE">
                     <font>
                        <Font size="8.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" styleClass="nav-btn" stylesheets="@style.css" text="Room" textFill="WHITE">
                     <font>
                        <Font size="8.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" styleClass="nav-btn" stylesheets="@style.css" text="About" textFill="WHITE" onAction="#goToAbout">
                     <font>
                        <Font size="8.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" styleClass="nav-btn" stylesheets="@style.css" text="Book" textFill="WHITE" onAction="#goToBook">
                     <font>
                        <Font size="8.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutX="60.0" layoutY="144.0" prefHeight="271.0" prefWidth="572.0" spacing="10.0" styleClass="hbx" stylesheets="@style.css">
         <children>
            <StackPane prefHeight="255.0" prefWidth="170.0" styleClass="room-image" stylesheets="@style.css">
               <children>
                  <ImageView fx:id="singleroom" fitHeight="255.0" fitWidth="170.0" pickOnBounds="true" preserveRatio="true" styleClass="room-image">
