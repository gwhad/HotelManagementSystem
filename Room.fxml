                  </ImageView>
                  <Button mnemonicParsing="false" styleClass="custom-btn" stylesheets="@style.css" text="See More" onAction="#goTodoubleroom" />
               </children>
            </StackPane>
            <StackPane prefHeight="255.0" prefWidth="170.0" styleClass="room-image" stylesheets="@style.css">
               <children>
                  <ImageView fx:id="suiteroom" fitHeight="255.0" fitWidth="170.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../../../../../../Downloads/suite.jpg" />
